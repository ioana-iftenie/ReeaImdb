<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="Entities.MovieGenreTable" table="moviegenre">
      <meta attribute="class-description">
         This class contains the movie genre detail. 
      </meta>
     <id name="idMovieGenre" type="int" column="idMovieGenre">
         <generator class="native"/>
      </id>
      <property name="idMovie" column="idMovie" type="int"/>
      <property name="idGenre" column="idGenre" type="int"/>
   </class>
</hibernate-mapping>
